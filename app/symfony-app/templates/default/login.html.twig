{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="form-group">
            <label for="username">{{ 'index.login.username'|trans }}</label>
            <input type="text" value="{{ last_username }}" name="email" id="username" class="form-control" required>
        </div>

        <div class="form-group">
            <label for="password">{{ 'index.login.password'|trans }}</label>
            <input type="password" name="password" id="password" class="form-control" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-lg btn-primary" type="submit">
            {{ 'index.login.sigin'|trans }}
        </button>
    </form>
{% endblock %}
